.header
  &__container
    display: flex
    flex-direction: row
    align-items: center
    justify-content space-between
    +above($breakpoints.sm)
      justify-content flex-start
      gap: 38px

  &__title
    display: none
    +above($breakpoints.sm)
      display: block
      height: 49px
      padding: 7px 42px 0
      border-left: 1px solid #fff
      border-right: 1px solid #fff

  &__logo
    width 120px
    height: auto
    +above($breakpoints.sm)
      width 160px
    +above($breakpoints.md)
      width 180px
    +above($breakpoints.xxl)
      width 203px

  &__connection
    display: flex
    flex-direction: row
    align-items: center
    gap: 16px

  &__connection-icon
    display: none
    +above($breakpoints.sm)
      display: block
      width 36px
      height: 36px
