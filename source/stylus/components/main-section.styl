.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #0D142F

  &__container
    position relative
    padding 20px 0 0 0
    +above($breakpoints.sm)
      padding 40px 0 60px 0
    +above($breakpoints.md)
      padding 60px 0 130px 0
    +above($breakpoints.xxl)
      padding 76px 0 181px 0

  &__title
    text-align: center
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      text-align: start
      padding 40px 0 25px 0
    +above($breakpoints.md)
      padding 70px 0 30px 0
    +above($breakpoints.xxl)
      padding 92px 0 49px 0

  &__sub-title
    text-align: center
    display: flex
    flex-direction: row
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      text-align: start
      gap: 20px

  &__coins
    display: none
    +above($breakpoints.sm)
      display: block
      width 60px
      height: auto
    +above($breakpoints.md)
      width 80px
    +above($breakpoints.xxl)
      width 91px

  &__bottom
    width 100%
    max-width: 493px
    margin-top 20px
    border: 1px solid rgba(214, 214, 214, 0.15)
    border-radius: 20px;
    backdrop-filter: blur(20px);
    background: rgba(255, 255, 255, 0.15)
    +above($breakpoints.sm)
      margin-top 50px
    +above($breakpoints.md)
      max-width: 650px
      margin-top 67px
    +above($breakpoints.xxl)
      max-width: 840px
      margin-top 67px

  &__bottom-text
    text-align: center
    padding 20px 0 20px 0
    border-radius: 20px;
    backdrop-filter: blur(20px);
    background: rgb(32, 39, 58)
    +above($breakpoints.sm)
      text-align: start
      padding 28px 0 29px 34px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    justify-content center
    gap: 8px
    padding: 19px 0 20px 0
    +above($breakpoints.sm)
      padding: 19px 0 24px 34px
      align-items: flex-start
    +above($breakpoints.xxl)
      justify-content flex-start
      flex-direction: row

  &__img
    width 300px
    height: auto
    margin 20px auto 0
    +above($breakpoints.sm)
      position: absolute
      width 570px
      margin 0
      bottom: 0
      right: -100px
    +above($breakpoints.md)
      width 820px
      right: -175px
    +above($breakpoints.xxl)
      width 1064px
      right: -505px

.main-item
  width 245px
  +above($breakpoints.md)
    width 320px
  +above($breakpoints.xxl)
    width 245px