.about-section
  background-image: url('../images/about-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #EDEDED

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 60px 0 60px 0
    +above($breakpoints.md)
      padding 100px 0 80px 0
    +above($breakpoints.xxl)
      padding 139px 0 107px 0

  &__box
    display: flex
    flex-direction: row
    align-items: flex-start
    gap: 10px
    +above($breakpoints.sm)
      gap: 31px

  &__icon
    width 27px
    height: auto
    +above($breakpoints.sm)
      width 70px
    +above($breakpoints.md)
      width 109px

  &__title
    text-align: center
    padding 0 0 20px 0
    +above($breakpoints.sm)
      text-align: start
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 42px 0
    +above($breakpoints.xxl)
      padding 0 0 52px 0

  &__inner
    position relative
    z-index 1
    display: flex
    flex-direction: column
    gap: 10px
    padding 20px 0 20px 10px
    background: linear-gradient(270.00deg, rgb(25, 83, 254) 0%,rgb(81, 161, 255) 100%)
    border-radius: 10px
    +above($breakpoints.sm)
      gap: 49px
      padding 20px 0 30px 20px
    +above($breakpoints.md)
      background: transparent
      padding 50px 0 80px 50px
      &:after
        content: "";
        position: absolute;
        z-index: -1;
        width: 100vw;
        height: 100%;
        background: linear-gradient(260deg, #1953fe 0%, #51a1ff 50%);
        top: 0;
        right: -10%;
        border-radius: 30px;
    +above($breakpoints.xxl)
      padding 77px 0 100px 100px

  &__text
    padding 4px 10px 4px 10px
    border-left: 4px solid white
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 4px 0 4px 32px

  &__arrow
    width 15px
    height: 12px
    margin: 20px auto
    +above($breakpoints.sm)
      width 36px
      height: 29px
      margin: 45px auto

  &__house
    display: none
    +above($breakpoints.sm)
      display: block
      width 300px
      height: auto
      position: absolute
      bottom: -123px;
      right: -74px;
    +above($breakpoints.md)
      width: 559px;
      bottom: -152px;
      right: -228px;
    +above($breakpoints.xxl)
      width 1115px
      bottom: -176px;
      right: -725px;

  &__bottom
    border-radius: 20px
    background: linear-gradient(270.00deg, rgb(25, 83, 254) 0%,rgb(81, 161, 255) 100%)
    display: flex
    flex-direction: column
    gap: 20px
    +above($breakpoints.sm)
      gap: 47px
      flex-direction: row

  &__bottom-center
    padding 40px 0 20px 0
    +above($breakpoints.sm)
      padding 70px 0 24px 0
    +above($breakpoints.md)
      padding 100px 0 24px 0
    +above($breakpoints.xxl)
      padding 133px 0 24px 0

  &__info
    width 100%
    max-width: 559px
    border-radius: 20px
    background-color #1D1D1B
    padding: 20px 10px 20px 20px
    +above($breakpoints.sm)
      max-width: 360px
      padding: 32px 10px 35px 30px
    +above($breakpoints.md)
      padding: 52px 10px 55px 30px
    +above($breakpoints.xxl)
      max-width: 559px
      padding: 72px 10px 75px 50px


  &__form
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    gap: 8px
    padding: 0 0 20px 0
    +above($breakpoints.sm)
      padding: 20px 0 20px 0
    +above($breakpoints.md)
      width 514px

.about-item
  width 100%
  max-width: 280px !important
  +above($breakpoints.md)
    max-width: 514px !important