@font-face
  font-family: "Cygre-Bold"
  src: url('../fonts/Cygre-Bold.woff'), url('../fonts/Cygre-Bold.woff2')
  font-display: swap
@font-face
  font-family: "Cygre-Regular"
  src: url('../fonts/Cygre-Regular.woff'), url('../fonts/Cygre-Regular.woff2')
  font-display: swap

@font-face
  font-family: "OpenSans-Bold"
  src: url('../fonts/OpenSans-Bold.woff'), url('../fonts/OpenSans-Bold.woff2')
  font-display: swap
@font-face
  font-family: "OpenSans-Regular"
  src: url('../fonts/OpenSans-Regular.woff'), url('../fonts/OpenSans-Regular.woff2')
  font-display: swap


@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin: 0 auto
  font-size: 18px
  font-family: "Cygre-Bold"
  font-weight: 700
  line-height: 120%
  color $color-white

.layout
  width: 100%
  height: 100%
  margin: 0 auto
  display: flex
  flex-direction: column
  overflow-x: hidden

.main
  flex: 1

.wrapper
  max-width: 320px
  margin: 0 auto
  padding: 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width: 750px
    padding: 0 12px
  +above($breakpoints.md)
    max-width: 996px
    padding: 0 15px
  +above($breakpoints.xxl)
    padding: 0 20px
    max-width: 1220px





